export function * get<%= pascalCase(props.name) %> (api, action) {
  const { data } = action
  // make the call to the api
  const response = yield call(api.get<%= props.vanillaName %>, data)

  // success?
  if (response.ok) {
    // You might need to change the response here - do this with a 'transform',
    // located in ../Transforms/. Otherwise, just pass the data back from the api.
    yield put(<%= props.name %>Actions.<%= props.name %>Success(response.data))
  } else {
    yield put(<%= props.name %>Actions.<%= camelCase(props.name) %>Failure())
  }
}


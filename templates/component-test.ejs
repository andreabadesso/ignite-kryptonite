import React from 'react'
import ReactDOM from 'react-dom'
import { createComponentWithIntl, shallowWithIntl } from '../Utils'
import <%= props.name %> from '../../Components/<%= props.name %>'
import renderer from 'react-test-renderer'

const div = document.createElement('div')
const wrapper = shallowWithIntl(<<%= props.name %> />)

it('component exists', () => {
  expect(wrapper.length).toBe(1)
})

it('component structure', () => {
  expect(wrapper.name()).toEqual('div')
  expect(wrapper.children().length).toEqual(1)
  expect(
    wrapper
      .children()
      .first()
      .name()
  ).toEqual('div')
  expect(
    wrapper
      .children()
      .first()
      .containsMatchingElement('<%= props.name %> Component')
    ).toEqual(true)
})

it('renders to snapshot', () => {
  const tree = createComponentWithIntl(<<%= props.name %> />, div).toJSON()
  expect(tree).toMatchSnapshot()
})

